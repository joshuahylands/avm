<Window
  x:Class="AVM.Views.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="using:AVM.Views"
  Title="AVM">

  <StackPanel
    Loaded="StackPanel_Loaded"
    HorizontalAlignment="Left"
    VerticalAlignment="Top">

    <!-- Device Selector -->
    <ComboBox
      ItemsSource="{x:Bind VM.Devices}"
      DisplayMemberPath="Name"
      SelectedItem="{x:Bind VM.SelectedDevice, Mode=TwoWay}"
      HorizontalAlignment="Stretch"
      Background="Transparent"
      BorderBrush="Transparent"/>

    <!-- Root Mixer -->
    <views:VolumeSlider DataContext="{x:Bind VM.SelectedDevice, Mode=OneWay}"/>
  
  </StackPanel>

</Window>
